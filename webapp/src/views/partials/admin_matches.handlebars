<div class="d-flex justify-content-between align-items-center mb-3">
  <h2 class="fw-bold">Gesti√≥n de Partidos por Jornadas</h2>
  <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addMatchModal">
    <i class="bi bi-plus-circle me-1"></i>Agregar Partido
  </button>
</div>

{{#if jornadas.length}}
<div class="accordion" id="jornadasAccordion">
  {{#each jornadas}}
  <div class="accordion-item">
    <h2 class="accordion-header" id="heading{{this.id}}">
      <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse{{this.id}}" aria-expanded="true" aria-controls="collapse{{this.id}}">
        Jornada: {{this.name}} - Fecha: {{formatDate this.date}}
      </button>
    </h2>
    <div id="collapse{{this.id}}" class="accordion-collapse collapse" aria-labelledby="heading{{this.id}}" data-bs-parent="#jornadasAccordion">
      <div class="accordion-body">
        {{#if this.matches.length}}
        <table class="table table-striped">
          <thead>
            <tr>
              <th>#</th>
              <th>Equipo Local</th>
              <th>Equipo Visitante</th>
              <th>Fecha</th>
              <th>Hora</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            {{#each this.matches}}
            <tr>
              <td>{{@index}}</td>
              <td>
                <img src="{{this.homeTeam.logo}}" alt="Logo Local" width="30">
                {{this.homeTeam.name}}
              </td>
              <td>
                <img src="{{this.awayTeam.logo}}" alt="Logo Visitante" width="30">
                {{this.awayTeam.name}}
              </td>
              <td>{{formatDate this.date}}</td>
              <td>{{this.time}}</td>
              <td>
                <form action="/dashboard/admin/partidos/{{this.id}}/eliminar" method="POST" class="d-inline">
                  <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                </form>
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
        {{else}}
        <p class="text-center">No hay partidos registrados para esta jornada.</p>
        {{/if}}
      </div>
    </div>
  </div>
  {{/each}}
</div>
{{else}}
<p class="text-center">No hay jornadas registradas para esta liga.</p>
{{/if}}

<!-- Modal para Agregar Partido -->
<div class="modal fade" id="addMatchModal" tabindex="-1" aria-labelledby="addMatchModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <form action="/dashboard/admin/partidos" method="POST">
        <div class="modal-header">
          <h5 class="modal-title" id="addMatchModalLabel">Agregar Partido</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <input type="hidden" name="leagueId" value="{{selectedLeagueId}}">
          <div class="mb-3">
            <label for="jornadaId" class="form-label">Jornada</label>
            <select name="jornadaId" id="jornadaId" class="form-select" required>
              {{#each jornadas}}
              <option value="{{this.id}}">{{this.name}}</option>
              {{/each}}
            </select>
          </div>
          <div class="mb-3">
            <label for="homeTeam" class="form-label">Equipo Local</label>
            <select name="homeTeamId" id="homeTeam" class="form-select" required>
              {{#each teams}}
              <option value="{{this.id}}">{{this.name}}</option>
              {{/each}}
            </select>
          </div>
          <div class="mb-3">
            <label for="awayTeam" class="form-label">Equipo Visitante</label>
            <select name="awayTeamId" id="awayTeam" class="form-select" required>
              {{#each teams}}
              <option value="{{this.id}}">{{this.name}}</option>
              {{/each}}
            </select>
          </div>
          <div class="mb-3">
            <label for="date" class="form-label">Fecha</label>
            <input type="date" name="date" id="date" class="form-control" required>
          </div>
          <div class="mb-3">
            <label for="time" class="form-label">Hora</label>
            <input type="time" name="time" id="time" class="form-control" required>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
          <button type="submit" class="btn btn-primary">Guardar</button>
        </div>
      </form>
    </div>
  </div>
</div>
