<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{title}}</title>
  <link rel="icon" href="/images/logo.png" type="image/png">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
  <link rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.3/font/bootstrap-icons.min.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    function fetchLigaData() {
      const leagueId = document.getElementById("ligaSelect").value;
      const section = "{{section}}"; // Obtiene la sección activa ('equipos' o 'jugadores')
      window.location.href = `/dashboard/admin/${section}?leagueId=${leagueId}`;
    }

    // Función de búsqueda en las tarjetas de equipos
    function filterTeams() {
      const input = document.getElementById("searchInput").value.toLowerCase();
      const cards = document.querySelectorAll(".col-md-6.col-lg-4");

      cards.forEach(card => {
        const teamName = card.querySelector(".card-header h5").textContent.toLowerCase();
        if (teamName.includes(input)) {
          card.style.display = ""; // Muestra la tarjeta si coincide con la búsqueda
        } else {
          card.style.display = "none"; // Oculta la tarjeta si no coincide
        }
      });
    }

    // Función de búsqueda en la tabla de jugadores
    function filterPlayers() {
      const input = document.getElementById("searchPlayerInput").value.toLowerCase();
      const rows = document.querySelectorAll("#playersTable tbody tr");

      rows.forEach(row => {
        const playerName = row.querySelector(".player-name").textContent.toLowerCase();
        if (playerName.includes(input)) {
          row.style.display = ""; // Muestra la fila si coincide con la búsqueda
        } else {
          row.style.display = "none"; // Oculta la fila si no coincide
        }
      });
    }

    function filterPlayersByTeam() {
      const selectedTeamId = document.getElementById("teamFilterSelect").value;
      const rows = document.querySelectorAll("#playersTable tbody tr");

      rows.forEach(row => {
        const rowTeamId = row.getAttribute("data-team-id");
        if (selectedTeamId === "all" || rowTeamId === selectedTeamId) {
          row.style.display = ""; // Muestra la fila si coincide el equipo o está en "Todos"
        } else {
          row.style.display = "none"; // Oculta la fila si no coincide
        }
      });
    }

    function toggleCaptainFields() {
      const isChecked = document.getElementById("newCaptainCheckbox").checked;
      document.getElementById("existingCaptainSelect").style.display = isChecked ? "none" : "block";
      document.getElementById("newCaptainFields").style.display = isChecked ? "block" : "none";
    }

    function validateForm() {
      let isValid = true;

      // Validar Nombre del Equipo
      const teamName = document.getElementById('teamName').value.trim();
      if (!teamName || teamName.length < 3) {
        document.getElementById('teamNameError').style.display = 'block';
        isValid = false;
      } else {
        document.getElementById('teamNameError').style.display = 'none';
      }

      // Validar Nombre de Usuario del Capitán
      const username = document.getElementById('newCaptainUsername').value.trim();
      if (!username || username.length < 3) {
        document.getElementById('newCaptainUsernameError').style.display = 'block';
        isValid = false;
      } else {
        document.getElementById('newCaptainUsernameError').style.display = 'none';
      }

      // Validar Contraseña del Capitán
      const password = document.getElementById('newCaptainPassword').value;
      const passwordPattern = /^(?=.*[A-Z])(?=.*\d)[A-Za-z\d]{8,}$/; // Al menos 8 caracteres, una mayúscula y un número
      if (!passwordPattern.test(password)) {
        document.getElementById('newCaptainPasswordError').style.display = 'block';
        isValid = false;
      } else {
        document.getElementById('newCaptainPasswordError').style.display = 'none';
      }

      return isValid;
    }


    function submitTeamForm(event) {
      event.preventDefault(); // Evita que el formulario se envíe automáticamente

      const formData = new FormData(event.target);

      fetch('/dashboard/admin/equipos', {
        method: 'POST',
        body: formData,
      })
        .then(response => response.json())
        .then(data => {
          const errorMessage = document.getElementById('error-message');
          if (data.error) {
            errorMessage.textContent = data.error;  // Muestra el mensaje de error
            errorMessage.style.display = 'block';    // Muestra el contenedor de error
          } else {
            // Si no hay error, redirige o realiza alguna acción
            window.location.href = '/dashboard/admin/equipos';
          }
        })
        .catch(error => {
          console.error('Error al registrar el equipo:', error);
          const errorMessage = document.getElementById('error-message');
          errorMessage.textContent = 'Hubo un error al registrar el equipo. Por favor, inténtelo de nuevo.'; // Error genérico
          errorMessage.style.display = 'block'; // Muestra el contenedor de error
        });
    }


    document.getElementById('addTeamForm').addEventListener('submit', submitTeamForm);


    document.getElementById('addLeagueModal').addEventListener('submit', function (event) {
      const leagueName = document.getElementById('newLeagueName').value.trim();
      if (leagueName.length < 3) {
        event.preventDefault();
        document.getElementById('newLeagueNameError').style.display = 'block';
      } else {
        document.getElementById('newLeagueNameError').style.display = 'none';
      }
    });

  
  </script>

</head>

<body>
  {{> navbaradmin}}

  <div class="container mt-4 " style="min-height: 80vh;">
    <h1 class="fw-bold">Panel de Administración</h1>
    {{#if (eq section 'ligas')}}
    <div class="card p-4 mb-4">
      <h2 class="fw-bold"><i class="bi bi-list-ul me-2"></i>Ligas</h2>
      <p class="text-muted">Gestión de ligas registradas</p>

      <!-- Mostrar mensaje si no hay ligas -->
      {{#if leagues.length}}
      <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
        {{#each leagues}}
        <div class="col">
          <div class="card shadow-sm border-0 h-100">
            <div class="card-body text-center">
              <i class="bi bi-trophy-fill text-warning fs-1 mb-3"></i>
              <h5 class="card-title fw-bold">{{this.name}}</h5>
              <p class="text-muted small mb-0">
                <i class="bi bi-people-fill me-1"></i> Equipos: {{this.totalTeams}}
              </p>
              <p class="text-muted small mb-0">
                <i class="bi bi-bar-chart-fill me-1"></i> Partidos: {{this.matchesPlayed}}
              </p>
              <p class="text-muted small">
                <i class="bi bi-graph-up-arrow me-1"></i> Goles: {{this.totalGoalsFor}}
              </p>
            </div>
            <div class="card-footer d-flex justify-content-between align-items-center">
              <!-- Botón para editar -->
              <button class="btn btn-outline-primary btn-sm me-2" data-bs-toggle="modal"
                data-bs-target="#editLeagueModal-{{this.id}}">
                <i class="bi bi-pencil me-1"></i>Editar
              </button>

              <!-- Botón para eliminar con modal -->
              <button class="btn btn-outline-danger btn-sm" data-bs-toggle="modal"
                data-bs-target="#confirmDeleteModal-{{this.id}}">
                <i class="bi bi-trash me-1"></i> Eliminar
              </button>
            </div>
          </div>
        </div>

        <!-- Modal de confirmación para eliminar -->
        <div class="modal fade" id="confirmDeleteModal-{{this.id}}" tabindex="-1"
          aria-labelledby="confirmDeleteModalLabel-{{this.id}}" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="confirmDeleteModalLabel-{{this.id}}">Confirmar Eliminación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                ¿Estás seguro de que deseas eliminar la liga <strong>{{this.name}}</strong>? Esto eliminará todos los
                datos asociados.
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <form action="/dashboard/admin/ligas/{{this.id}}/eliminar" method="POST" style="display: inline;">
                  <button type="submit" class="btn btn-dark text-light">Eliminar Liga</button>
                </form>
              </div>
            </div>
          </div>
        </div>

        <!-- Modal para editar liga -->
        <div class="modal fade" id="editLeagueModal-{{this.id}}" tabindex="-1" aria-labelledby="editLeagueModalLabel"
          aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title">Editar Liga</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <form action="/dashboard/admin/ligas/{{this.id}}/editar" method="POST">
                <div class="modal-body">
                  <label for="leagueName" class="form-label">Nombre de la Liga</label>
                  <input type="text" class="form-control" id="leagueName" name="name" value="{{this.name}}" required>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                  <button type="submit" class="btn btn-dark text-light">Guardar Cambios</button>
                </div>
              </form>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
      {{else}}
      <p class="text-center text-muted">No hay ligas registradas.</p>
      {{/if}}

      <!-- Botón para agregar una nueva liga -->
      <button class="btn btn-dark mt-3" data-bs-toggle="modal" data-bs-target="#addLeagueModal">
        <i class="bi bi-plus-lg me-1"></i> Agregar Nueva Liga
      </button>

      <!-- Modal para agregar nueva liga -->
      <div class="modal fade" id="addLeagueModal" tabindex="-1" aria-labelledby="addLeagueModalLabel"
        aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">Agregar Nueva Liga</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="/dashboard/admin/ligas" method="POST">
              <div class="modal-body">
                <label for="newLeagueName" class="form-label">Nombre de la Liga</label>
                <input type="text" class="form-control" id="newLeagueName" name="name" required>
                <div id="newLeagueNameError" class="text-danger" style="display: none;">El nombre debe tener al menos 3
                  caracteres.</div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="submit" class="btn btn-primary">Guardar Liga</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    {{/if}}


    {{#if (eq section 'equipos')}}
    {{> select_admin}}

    <div class="card p-4 mb-4">
      <h2 class="fw-bold">Equipos</h2>
      <p class="text-muted">Gestión de equipos de la liga</p>

      <div class="d-flex justify-content-between mb-3">
        <input type="text" id="searchInput" class="form-control" placeholder="Buscar equipo..."
          aria-label="Buscar equipo" style="max-width: 500px;" oninput="filterTeams()">
