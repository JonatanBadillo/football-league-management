                  <!-- Datos del Equipo -->
                  <div class="mb-3">
                    <label for="teamName" class="form-label">Nombre del Equipo</label>
                    <input type="text" class="form-control" id="teamName" name="name" required>
                    <div id="teamNameError" class="text-danger" style="display: none;">El nombre del equipo es
                      obligatorio y debe tener al menos 3 caracteres.</div>
                  </div>
                  <div class="mb-3">
                    <label for="leagueId" class="form-label">Liga</label>
                    <select id="leagueId" name="leagueId" class="form-select" required>
                      {{#each leagues}}
                      <option value="{{this.id}}" {{#if (eq ../selectedLeagueId this.id)}}selected{{/if}}>{{this.name}}
                      </option>
                      {{/each}}
                    </select>
                  </div>
                  <div class="mb-3">
                    <label for="teamLogo" class="form-label">Logo del Equipo (opcional)</label>
                    <input type="file" class="form-control" id="teamLogo" name="logo" accept="image/*">
                    <div id="teamLogoError" class="text-danger" style="display: none;">El logo debe ser una imagen
                      válida (JPG, PNG, etc.).</div>
                  </div>

                  <!-- Datos del Capitán -->
                  <h5 class="fw-bold">Datos del Capitán</h5>
                  <div class="mb-3">
                    <label for="newCaptainUsername" class="form-label">Nombre de Usuario del Capitán</label>
                    <input type="text" class="form-control" id="newCaptainUsername" name="newCaptainUsername" required>
                    <div id="newCaptainUsernameError" class="text-danger" style="display: none;">El nombre de usuario es
                      obligatorio y debe tener al menos 3 caracteres.</div>
                  </div>
                  <div class="mb-3">
                    <label for="newCaptainPassword" class="form-label">Contraseña</label>
                    <input type="password" class="form-control" id="newCaptainPassword" name="newCaptainPassword"
                      required>
                    <div id="newCaptainPasswordError" class="text-danger" style="display: none;">
                      La contraseña debe tener al menos 8 caracteres, una letra mayúscula y un número.
                    </div>
                  </div>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                  <button type="submit" class="btn btn-primary  btn-dark text-light">Guardar Equipo</button>
                </div>
              </form>
            </div>
          </div>
        </div>

      </div>

      <div class="row">
        {{#each teams}}
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card shadow-sm border-0" style="border-radius: 12px;">
            <div class="card-header bg-dark text-white text-center"
              style="border-top-left-radius: 12px; border-top-right-radius: 12px;">
              <h5 class="fw-bold mb-0">{{this.name}}</h5>
            </div>
            <div class="card-body text-center">
              <img src="{{this.logo}}" alt="{{this.name}}" class="rounded-circle border border-2"
                style="width: 70px; height: 70px; object-fit: cover; margin-bottom: 10px;">

              <div class="d-flex justify-content-around mb-3">
                <div class="text-center">
                  <i class="bi bi-trophy-fill text-warning"></i>
                  <p class="mb-0 small text-muted">Puntos</p>
                  <p class="fw-bold mb-0">{{this.points}}</p>
                </div>
                <div class="text-center">
                  <i class="bi bi-people-fill text-info"></i>
                  <p class="mb-0 small text-muted">Partidos</p>
                  <p class="fw-bold mb-0">{{this.matchesPlayed}}</p>
                </div>
                <div class="text-center">
                  <i class="bi bi-cash-coin text-success"></i>
                  <p class="mb-0 small text-muted">Balance</p>
                  <p class="fw-bold mb-0">${{this.balance}}</p>
                </div>
              </div>

              <ul class="list-group list-group-flush text-start small">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  <span><i class="bi bi-person-badge-fill text-primary me-2"></i>
                    Capitán:</span>
                  <span>{{this.captain.username}}</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  <span><i class="bi bi-bar-chart-fill text-secondary me-2"></i> GF
                    / GC:</span>
                  <span>{{this.goalsFor}} / {{this.goalsAgainst}}</span>
                </li>
                <li class="list-group-item d-flex justify-content-between">
                  <span><i class="bi bi-arrow-up-right-square-fill text-success me-2"></i>
                    G: {{this.victories}}</span>
                  <span><i class="bi bi-arrow-right-square-fill text-muted me-2"></i>
                    E: {{this.draws}}</span>
                  <span><i class="bi bi-arrow-down-right-square-fill text-danger me-2"></i>
                    P: {{this.defeats}}</span>
                </li>
              </ul>
            </div>
            <div class="card-footer bg-light text-center">
              <!-- Botón para editar -->
              <button class="btn btn-outline-primary btn-sm me-2" data-bs-toggle="modal"
                data-bs-target="#editTeamModal-{{this.id}}">
                <i class="bi bi-pencil me-1"></i> Editar
              </button>

              <!-- Botón para eliminar -->
              <button class="btn btn-outline-danger btn-sm" data-bs-toggle="modal"
                data-bs-target="#confirmDeleteTeamModal-{{this.id}}">
                <i class="bi bi-trash me-1"></i> Eliminar
              </button>
            </div>
          </div>
        </div>

        <!-- Modal para editar equipo -->
        <div class="modal fade" id="editTeamModal-{{this.id}}" tabindex="-1"
          aria-labelledby="editTeamModalLabel-{{this.id}}" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title"><i class="bi bi-pencil-square me-2"></i>Editar Equipo</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <form action="/dashboard/admin/equipos/{{this.id}}/editar" method="POST" enctype="multipart/form-data">
                <div class="modal-body">
                  <div class="mb-3">
                    <label for="teamName-{{this.id}}" class="form-label">Nombre del Equipo</label>
                    <input type="text" class="form-control" id="teamName-{{this.id}}" name="name" value="{{this.name}}"
                      required>
                  </div>
                  <div class="mb-3">
                    <label for="teamLogo-{{this.id}}" class="form-label">Logo del Equipo (opcional)</label>
                    <input type="file" class="form-control" id="teamLogo-{{this.id}}" name="logo" accept="image/*">
                  </div>
                  <div class="mb-3">
                    <label for="teamBalance-{{this.id}}" class="form-label">Balance del Equipo</label>
                    <input type="number" class="form-control" id="teamBalance-{{this.id}}" name="balance"
                      value="{{this.balance}}" required>
                  </div>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                  <button type="submit" class="btn btn-warning text-dark">Guardar Cambios</button>
                </div>
              </form>

            </div>
          </div>
        </div>

        <!-- Modal de confirmación para eliminar equipo -->
        <div class="modal fade" id="confirmDeleteTeamModal-{{this.id}}" tabindex="-1"
          aria-labelledby="confirmDeleteTeamModalLabel-{{this.id}}" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title"><i class="bi bi-exclamation-circle me-2"></i>Confirmar Eliminación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                ¿Estás seguro de que deseas eliminar el equipo <strong>{{this.name}}</strong>? Esta acción no se puede
                deshacer.
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <form action="/dashboard/admin/equipos/{{this.id}}/eliminar" method="POST" style="display: inline;">
                  <button type="submit" class="btn btn-danger">Eliminar Equipo</button>
                </form>
              </div>
            </div>
          </div>
        </div>
        {{/each}}
      </div>

    </div>

    {{/if}}
    {{#if (eq section 'jugadores')}}
    {{> select_admin}}

    <div class="card p-4 mb-4" style="min-height: 80vh;">
      <h2 class="fw-bold">Jugadores</h2>
      <p class="text-muted">Gestión de jugadores de la liga</p>

      <!-- Filtro por equipo y campo de búsqueda -->
      <div class="d-flex justify-content-between mb-3">
        <select id="teamFilterSelect" class="form-select w-auto" onchange="filterPlayersByTeam()">
          <option value="all">Todos los equipos</option>
          {{#each teams}}
          <option value="{{this.id}}">{{this.name}}</option>
          {{/each}}
        </select>

        <input type="text" id="searchPlayerInput" class="form-control" placeholder="Buscar jugador..."
          aria-label="Buscar jugador" style="max-width: 500px;" oninput="filterPlayers()">

        <button class="btn btn-dark ms-3" type="button" data-bs-toggle="modal" data-bs-target="#addPlayerModal">
          <i class="bi bi-plus-lg me-1"></i>Añadir Jugador
        </button>


        <!-- Modal para Agregar Jugador -->
        <div class="modal fade" id="addPlayerModal" tabindex="-1" aria-labelledby="addPlayerModalLabel"
          aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="addPlayerModalLabel">Agregar Jugador</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <form action="/dashboard/admin/jugadores" method="POST" enctype="multipart/form-data">
                <div class="modal-body">
                  <div class="mb-3">
                    <label for="playerName" class="form-label">Nombre</label>
                    <input type="text" class="form-control" id="playerName" name="name" required>
                  </div>
                  <div class="mb-3">
  <label for="playerPosition" class="form-label">Posición</label>
  <select id="playerPosition" name="position" class="form-select" required>
    <option value="Portero">Portero</option>
    <option value="Defensa">Defensa</option>
    <option value="Medio">Medio</option>
    <option value="Delantero">Delantero</option>
  </select>
</div>

                  <div class="mb-3">
                    <label for="playerGoals" class="form-label">Goles</label>
                    <input type="number" class="form-control" id="playerGoals" name="goals" min="0" value="0">
                  </div>
                  <div class="mb-3">
                    <label for="playerTeam" class="form-label">Equipo</label>
                    <select id="playerTeam" name="teamId" class="form-select" required>
                      {{#each teams}}
                      <option value="{{this.id}}">{{this.name}}</option>
                      {{/each}}
                    </select>
                  </div>
                  <div class="mb-3">
                    <label for="playerImage" class="form-label">Imagen</label>
                    <input type="file" class="form-control" id="playerImage" name="image" accept="image/*">
                  </div>
                  <input type="hidden" name="leagueId" value="{{selectedLeagueId}}">
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                  <button type="submit" class="btn btn-dark">Guardar</button>
                </div>
              </form>
            </div>
          </div>
        </div>

        <!-- Modal para Editar Jugador -->
        {{#each players}}
        <div class="modal fade" id="editPlayerModal-{{this.id}}" tabindex="-1"
          aria-labelledby="editPlayerModalLabel-{{this.id}}" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title">Editar Jugador</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <form action="/dashboard/admin/jugadores/{{this.id}}/editar" method="POST" enctype="multipart/form-data">
                <div class="modal-body">
                  <div class="mb-3">
                    <label for="playerName-{{this.id}}" class="form-label">Nombre</label>
                    <input type="text" class="form-control" id="playerName-{{this.id}}" name="name"
                      value="{{this.name}}" required>
                  </div>
                  <div class="mb-3">
  <label for="playerPosition" class="form-label">Posición</label>
  <select id="playerPosition" name="position" class="form-select" required>
    <option value="Portero">Portero</option>
    <option value="Defensa">Defensa</option>
    <option value="Medio">Medio</option>
    <option value="Delantero">Delantero</option>
  </select>
</div>

                  <div class="mb-3">
                    <label for="playerGoals-{{this.id}}" class="form-label">Goles</label>
                    <input type="number" class="form-control" id="playerGoals-{{this.id}}" name="goals"
                      value="{{this.goals}}" min="0">
                  </div>
                  <div class="mb-3">
                    <label for="playerTeam-{{this.id}}" class="form-label">Equipo</label>
                    <select id="playerTeam-{{this.id}}" name="teamId" class="form-select">
                      {{#each ../teams}}
                      <option value="{{this.id}}" {{#if (eq ../team.id this.id)}}selected{{/if}}>{{this.name}}</option>
                      {{/each}}
                    </select>
                  </div>
                  <div class="mb-3">
                    <label for="playerImage-{{this.id}}" class="form-label">Imagen</label>
                    <input type="file" class="form-control" id="playerImage-{{this.id}}" name="image" accept="image/*">
                  </div>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                  <button type="submit" class="btn btn-warning text-dark">Guardar</button>
                </div>
              </form>
            </div>
          </div>
        </div>
        {{/each}}





      </div>



      <!-- Contenedor de la tabla responsiva -->
      <div class="table-responsive">
  <table class="table table-hover align-middle" id="playersTable">
    <thead class="table-dark text-center">
      <tr>

        <th scope="col">Foto</th>
        <th scope="col">Nombre <i class="bi bi-person-circle text-info"></i></th>
        <th scope="col">Posición <i class="bi bi-geo text-primary"></i></th>
        <th scope="col">PJ <i class="bi bi-clipboard-check text-success"></i></th>
        <th scope="col">Goles <i class="bi bi-trophy text-warning"></i></th>
        <th scope="col">TA <i class="bi bi-square-fill text-warning"></i></th>
        <th scope="col">TR <i class="bi bi-square-fill text-danger"></i></th>
        <th scope="col">Equipo <i class="bi bi-people-fill text-secondary"></i></th>
        <th scope="col">Acciones</th>
      </tr>
    </thead>
    <tbody>
      {{#each players}}
      <tr>

        <td class="text-center">
          <img src="{{this.image}}" alt="Foto de {{this.name}}"
               style="width: 50px; height: 50px; object-fit: cover; border-radius: 50%;">
        </td>
        <td class="fw-bold text-center">{{this.name}}</td>
        <td class="text-center">
          {{#if (eq this.position "Portero")}}
            <i class="bi bi-shield-fill text-primary"></i> Portero
          {{else if (eq this.position "Defensa")}}
            <i class="bi bi-stop-fill text-success"></i> Defensa
          {{else if (eq this.position "Medio")}}
            <i class="bi bi-circle-fill text-warning"></i> Medio
          {{else if (eq this.position "Delantero")}}
            <i class="bi bi-forward-fill text-danger"></i> Delantero
          {{/if}}
        </td>
        <td class="text-center">{{this.matchesPlayed}}</td>
        <td class="text-center">
          <i class="bi bi-star-fill text-warning"></i> {{this.goals}}
        </td>
        <td class="text-center">
          <i class="bi bi-square-fill text-warning"></i> {{this.yellowCards}}
        </td>
        <td class="text-center">
          <i class="bi bi-square-fill text-danger"></i> {{this.redCards}}
        </td>
        <td class="text-center">{{this.team.name}}</td>
        <td class="text-center">
          <a href="#" class="btn btn-sm btn-outline-primary me-2"
             data-bs-toggle="modal" data-bs-target="#editPlayerModal-{{this.id}}">
            <i class="bi bi-pencil-fill"></i>
          </a>
          <a href="#" class="btn btn-sm btn-outline-danger"
             data-bs-toggle="modal" data-bs-target="#deletePlayerModal-{{this.id}}">
            <i class="bi bi-trash-fill"></i>
          </a>
        </td>
      </tr>
      {{/each}}

      {{#unless players.length}}
      <tr>
        <td colspan="10" class="text-center text-muted py-3">
          <i class="bi bi-exclamation-triangle-fill text-warning"></i> No hay jugadores disponibles
        </td>
      </tr>
      {{/unless}}
    </tbody>
  </table>
</div>

    </div>

    {{/if}}


  </div>

</body>
{{> footer}}

</html>